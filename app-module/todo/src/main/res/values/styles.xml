<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">

        <item name="colorPrimary">@color/res_yellow</item>
        <item name="colorPrimaryDark">@color/res_black</item>
        <item name="android:textColorPrimary">@color/res_text_primary</item>
        <item name="android:colorBackground">@color/res_background</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--设置弹出位置的主题-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuTheme</item>
    </style>

    <!--Toolbar弹出popup主题的设置-->
    <style name="OverflowMenuTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--这个属性设置为false，就能使得popup在Toolbar的下面显示-->
        <item name="overlapAnchor">false</item>
    </style>

</resources>
